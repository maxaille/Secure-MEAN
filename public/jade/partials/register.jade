.col-xs-12.col-sm-6.col-sm-offset-3
    form(name="registerForm")
        .form-group
            label Username:
            input.form-control(type="text" ng-model="username" name="username" required)
        .form-group
            label Password:
            input.form-control(type="password" ng-model="password" name="password" required)
        .form-group(ng-hide="!password")
            label Repeat password:
            input.form-control(type="password" ng-model="passwordRepeat" name="passwordRepeat" required)
        hr
        button.btn.btn-primary.form-control(ng-click="validate(registerForm)" ng-disabled="registerForm.$invalid || password != passwordRepeat") Register